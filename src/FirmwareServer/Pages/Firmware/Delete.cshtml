@page "{id}"
@model FirmwareServer.Pages.Firmware.DeleteModel
@{
    ViewData["Title"] = "Delete firmware";
}

<page-header _title="">
    <div class="align-self-end ml-auto">
        <a asp-page-handler="delete" class="btn btn-danger">Delete</a>
        <a asp-page="./Index" class="btn btn-secondary ">Cancel</a>
    </div>
</page-header>

<partial name="_StatusMessage" for="StatusMessage" />

<h3>Are you sure you want to delete this firmware?</h3>

<div class="row">
    <div class="col-md-6">
        <dl>
            <dt>Name</dt>
            <dd>@Html.DisplayFor(x => x.Firmware.Name)</dd>

            <dt>Filename</dt>
            <dd>@Html.DisplayFor(x => x.Firmware.Filename)</dd>

            <dt>Created</dt>
            <dd>@Html.DisplayFor(x => x.Firmware.Created)</dd>

            <dt>Description</dt>
            <dd style="white-space: pre">@Html.DisplayFor(x => x.Firmware.Description)</dd>
        </dl>
    </div>
</div>